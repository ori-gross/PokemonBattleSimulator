<Window x:Class="PokemonBattleSimulator.Views.PokedexWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonBattleSimulator.Views"
        mc:Ignorable="d"
        Title="Pokedex" Height="450" Width="800">
    <Grid>
        <Grid>
            <DataGrid ItemsSource="{Binding PokemonSpeciesList}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  RowHeight="64"
                  GridLinesVisibility="Horizontal"
                  Margin="10">

                <DataGrid.Columns>
                    <!-- Pokedex Number -->
                    <DataGridTextColumn Header="No." Binding="{Binding PokedexNumber}" Width="50"/>

                    <!-- Picture -->
                    <DataGridTemplateColumn Header="Sprite" Width="64">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Sprites.FrontImageMalePath}" Width="64" Height="64"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Name -->
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>

                    <!-- Type(s) -->
                    <DataGridTextColumn Header="Type" Width="150">
                        <DataGridTextColumn.Binding>
                            <MultiBinding StringFormat="{}{0}{1}">
                                <Binding Path="Type1"/>
                                <Binding Path="Type2"/>
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>

                    <!-- Base Stats -->
                    <DataGridTextColumn Header="HP" Binding="{Binding BaseStats.HP}" Width="50"/>
                    <DataGridTextColumn Header="Attack" Binding="{Binding BaseStats.Attack}" Width="50"/>
                    <DataGridTextColumn Header="Defense" Binding="{Binding BaseStats.Defense}" Width="50"/>
                    <DataGridTextColumn Header="Sp.Att" Binding="{Binding BaseStats.SpecialAttack}" Width="50"/>
                    <DataGridTextColumn Header="Sp.Def" Binding="{Binding BaseStats.SpecialDefense}" Width="50"/>
                    <DataGridTextColumn Header="Speed" Binding="{Binding BaseStats.Speed}" Width="50"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
